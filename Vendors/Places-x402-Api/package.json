{
  "name": "template-x402-api",
  "version": "1.0.0",
  "description": "X402 API Template - Boilerplate for creating micropayment-enabled APIs with rich discovery metadata",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server.ts",
    "vercel-dev": "vercel dev",
    "build": "tsc",
    "vercel-build": "npm run build",
    "start": "node dist/server.js",
    "test": "tsx tests/integration-test.ts",
    "test:payment": "tsx tests/payment-test.ts",
    "test:api": "tsx tests/api-test.ts",
    "test:x402-axios": "tsx tests/x402-axios-client-test.ts",
    "test:x402-compliance": "tsx tests/client-x402-compliance-test.ts",
    "test:x402-compliance:remote": "API_BASE_URL=https://your-api.example.com tsx tests/client-x402-compliance-test.ts",
    "test:full-integration": "tsx tests/client-full-integration-test.ts",
    "test:full-integration:remote": "API_BASE_URL=https://your-api.example.com tsx tests/client-full-integration-test.ts",
    "test:production": "tsx tests/production-api-test.ts",
    "test:production:remote": "API_BASE_URL=https://your-api.example.com tsx tests/production-api-test.ts",
    "get-usdc": "tsx scripts/get-base-sepolia-usdc.ts",
    "format": "prettier -c .prettierrc --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier -c .prettierrc --check \"**/*.{ts,js,cjs,json,md}\"",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "test:celo": "tsx tests/celo-payment-test.ts"
  },
  "dependencies": {
    "@coinbase/x402": "^0.6.5",
    "axios": "^1.7.9",
