    "helmet": "^7.1.0",
    "x402-express": "^0.6.5",
    "x402-fetch": "^0.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vercel/node": "^3.2.29",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "3.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "viem": "^2.37.9",
    "x402-axios": "^0.6.5"
  },
  "keywords": [
    "x402",
